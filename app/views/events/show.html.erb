<div class="row">
  <div class="col-md-8">
    <div class="events">
      <h1>Event Details</h1>
      <h2><%= @event.title %></h2>
      <p><%= @event.description %></p>
      <p><%= @event.address %></p>
      <p><%= @event.event_date %></p>
    </div>
    <div class="event-comments">
        <h3>Comments</h3>
        <% @event.comments.order(created_at: :desc).each do |comment| %>
          <p><%= comment.content %></p>
        <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="event-attendees">
      <h3>Attendees</h3>
      <% if @event.attendances.empty? %>
        <p>No attendees yet, bet the first!</p>
      <% else %>
        <h4>Going</h4>
        <% @event.attendances.each do |attendance| %>
          <% if attendance.attendance_status == "Going" %>
            <p><%= attendance.user.first_name %></p>
          <% end %>
        <% end %>
        <h4>Maybe</h4>
        <% @event.attendances.each do |attendance| %>
          <% if attendance.attendance_status == "Maybe" %>
            <p><%= attendance.user.first_name %></p>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <% if policy(@attendance).create? %>
      <%= simple_form_for [@event, @attendance] do |f| %>
        <%= f.input :attendance_status, collection: ["Going", "Maybe"], label: false %>
        <%= f.button :submit, "Attend", class: "btn btn-primary" %>
      <% end %>
    <% end %>
</div>
<% if policy(@event).edit? %>
  <%= link_to "Edit", edit_event_path(@event) %>
<% end %>
<% if policy(@event).destroy? %>
  <%= link_to "Delete", event_path(@event), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
<% end %>
<%= link_to "back", events_path %>
