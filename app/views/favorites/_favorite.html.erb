<% if favoritable.favorites.find_by(favoritable_id: favoritable.id, user: current_user) %>
  <%= link_to favorite_path(favoritable.id), data: {turbo_method: :delete} do %>
    <i class="fa-solid fa-bookmark"></i>
  <% end %>
<% else %>
  <%= link_to favorites_path("#{favoritable.class.to_s.downcase}_id": favoritable.id), data: {turbo_method: :post} do %>
    <i class="fa-regular fa-bookmark"></i>
  <% end %>
<% end %>
