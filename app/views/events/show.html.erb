<%= content_for(:title, 'Event details | Greenly') %>

<div class="container">
  <main>
    <div class="row">
      <div class="col-md-8">
        <div class="white__card">
          <div class="head">
            <div class="title">
              <h2><%= @event.title %></h2>
            </div>
            <span class="edit">
                <%= render partial: "shared/dropdown", locals: { item: @event } %>
            </span>
          </div>
          <div class="photo">
            <%= image_tag @event.photo, alt: "Event Image" if @event.photo.attached? %>
          </div>
          <div class="action-buttons">
              <div class="interaction-buttons">
                  <span><i class="fa-regular fa-heart"></i></span>
                  <span><i class="fa-regular fa-comment-dots"></i></span>
                  <span><i class="fa-sharp fa-solid fa-share-nodes"></i></span>
              </div>
              <div class="bookmark">
                  <span><%= render "favorites/favorite", favoritable: @event %></span>
              </div>
          </div>
          <div class="card__details">
              <p><%= @event.description %></p>
              <div class="more-info mt-3">
                  <div class="date mb-2">
                      <span><i class="fa-regular fa-calendar"></i></span>
                      <span><%= @event.event_date.to_fs(:long) %></span>
                  </div>
                  <div class="location">
                      <span><i class="fa-sharp fa-solid fa-location-dot"></i></span>
                      <span><%= @event.address %></span>
                  </div>
              </div>
          </div>
        <%= render partial: "comments/comment_form", locals: { commentable: @event } %>
        <div class="card__comments">
          <%= render partial: "comments/comments", locals: { commentable: @event } %>
        </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="attendance">
          <div class="attendees">
            <%= render partial: "attendances/attendances", locals: { event: @event } %>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
