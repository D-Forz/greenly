<%= content_for(:title, 'My Profile - Greenly') %>

<p><%= @user.first_name %></p>
<p><%= @user.last_name %></p>
<p><%= @user.email %></p>
<% if @user.photo.attached? %>
  <%= image_tag @user.photo %>
<% else %>
  <%= image_tag "blank_profile.jpg", class:'avatar-bordered'%>
<% end %>


<ul>
  <% current_user.badges.each do |badge| %>
    <li><%= badge.name %><i class="<%= badge.custom_fields[:icon_class] %>"></i></li>
  <% end %>
</ul>
<p><%= current_user.points %> points</p>

<%= link_to "Edit", edit_user_registration_path %>
