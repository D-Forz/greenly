<%= simple_form_for [commentable, Comment.new],
  data: { turbo_frame: "comments-#{commentable.id}",
  controller: 'utils',
  action: "turbo:submit-end->utils#resetForm"
  }, wrapper: :create_comment, html: {class: 'form'} do |f| %>
      <div class="profile-photo">
        <%= cl_image_tag current_user.photo.key %>
      </div>
      <%= f.input :content, placeholder: "Write a comment", label: "Write a comment" %>
      <%= f.button :submit, class: "btn btn-primary", value: "Comment" %>
<% end %>
