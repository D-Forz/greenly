<%= turbo_frame_tag "comments-#{commentable.id}" do %>
  <div class="comments">
    <div class="count-comments text-muted mb-3"><%= pluralize(commentable.comments.count, "comment") %></div>
    <% commentable.comments.order(created_at: :desc).each do |comment| %>
        <div class="comment__action">
          <p>
            <b><%= comment.user.full_name %></b>
            <%= comment.content %>
            <br><small> <%= distance_of_time_in_words_to_now(comment.created_at) %> ago</small>
          </p>
          <% if comment.user == current_user %>
            <a href="" class= "text-decoration-none" data-controller="sweetalert"
            data-action= "click->sweetalert#confirm"><i class="fa-regular fa-trash-can"></i></a>
            <%= link_to "", comment, id: "delete-link", data: { turbo_method: :delete}, class: "invisible" %>
          <% end %>
        </div>
    <% end %>
  </div>
<% end %>
