<%= content_for(:title, 'Comunidad | Greenly') %>

<div class="container">
  <div class="row">
    <div class="col-md-2">
      <span>sidebar</span>
      <span>History</span>
      <span>Bookmarks</span>
    </div>
    <div class="col-md-7">
      <h1>Posts</h1>
      <div class="posts">
        <% @posts.each do |post| %>
            <%= render "post", post: post %>
        <% end %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="events-list">
        <h2>Events</h2>
        <ul>
          <% @events.each do |event| %>
            <li><%= link_to event.title, event_path(event) %></li>
          <% end %>
        </ul>
        <p>Look for more events <%= link_to "here", events_path %></p>
      </div>
    </div>
  </div>
</div>
