<%= content_for(:title, 'Comunidad | Greenly') %>

<div class="container mt-3">
  <div class="row">
    <div class="col-md-2">
      <h2>sidebar</h2>
      <p>History</p>
      <p><%= link_to "favorites", favorites_path %></p>
    </div>
    <div class="col-md-7">
      <h1>Posts</h1>
      <div class="row">
        <%= link_to "Create a new Post", new_post_path, data: { turbo_frame: "remote_modal" } %>
        <div class="posts">
          <%= turbo_frame_tag "posts-#{@pagy.page}" do %>
            <%= render @posts %>
          <% end %>
        </div>
        <div class="d-flex justify-content-center">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="events-list">
        <h2>Events</h2>
        <ul>
          <% @events.each do |event| %>
            <li><%= link_to event.title, event_path(event) %></li>
          <% end %>
        </ul>
        <p>Look for more events <%= link_to "here", events_path %></p>
      </div>
    </div>
  </div>
</div>
